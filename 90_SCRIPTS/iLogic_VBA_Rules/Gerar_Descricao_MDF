'—— Descrição MDF — espessura e padrão dinâmicos ——
Sub Main()
    Dim espessura As Double = ESPESSURA
    Dim comprimento As Double = COMPRIMENTO
    Dim largura As Double = LARGURA
    Dim padrao As String = PADRAO

    If Not ValidarParametros(espessura, comprimento, largura, padrao) Then
        MessageBox.Show("Parâmetros inválidos para descrição MDF!", "Erro", MessageBoxButtons.OK, MessageBoxIcon.Warning)
        Exit Sub
    End If

    Dim desc As String = MontarDescricaoMDF(espessura, comprimento, largura, padrao)
    iProperties.Value("Project", "Description") = desc
    iProperties.Value("Project", "Part Number") = desc
End Sub

Private Function ValidarParametros(esp As Double, comp As Double, larg As Double, pad As String) As Boolean
    If esp <= 0 Or comp <= 0 Or larg <= 0 Then Return False
    If String.IsNullOrWhiteSpace(pad) Then Return False
    Return True
End Function

Private Function MontarDescricaoMDF(esp As Double, comp As Double, larg As Double, pad As String) As String
    Return $"MDF {esp}MM | {comp} × {larg} | PADRAO {pad.ToUpperInvariant()}"
End Function